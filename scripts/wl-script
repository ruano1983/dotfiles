#!/bin/bash

volume_up() {
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
}
volume_down() {
	wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
}
volume_mute() {
	wpctl set-mute  @DEFAULT_SINK@ toggle
}
power_off() {
	systemctl poweroff
}
power_reboot() {
	systemctl reboot
}
pause_player() {
	playerctl play-pause
}
next_player() {
	playerctl next
}
previous_player() {
	playerctl previous
}
print_screenshot() {
	capture="$(xdg-user-dir PICTURES)/capturas/$(date +'%s_grim.png')"
	grim $capture
	notify-send -i /usr/share/icons/Papirus-Dark/32x32/status/messagebox_info.svg "Screenshot created!" "$capture"
}
runbmenu() {
	bemenu-run -i -l 16 \
	    --fb '#121212' \
	    --ff '#fffbd1' \
	    --nb '#121212' \
	    --nf '#fffbd1' \
	    --tb '#121212' \
	    --hb '#3fc3aa' \
	    --tf '#3fc3aa' \
	    --hf '#191919' \
	    --af '#fffbd1' \
	    --sb '#3fc3aa' \
	    --sf '#fffbd1' \
	    --fn 'Ubuntu bold 10' -H 20 -C -b  -p Apps
}
$1
